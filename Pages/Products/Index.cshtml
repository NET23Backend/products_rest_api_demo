@page
@model products_webb_app.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create">Create New Product</a>


